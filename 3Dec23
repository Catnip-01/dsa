#include "stdio.h"

int binarySearch(int *arr, int n);
int maroSearch(int *arr, int n);

#define compare(a,b) ((a) < (b)? -1: ((a) == (b)? 0:-1));

int main(){
    int a[10] = {1, 2, 3, 4, 6, 7, 8 , 9, 10, 11};
    printf ("enter the number you wish to search : ");
    int target;
    scanf("%d", &target);
    if (binarySearch(a, target)){
        printf ("element %d can be found at index: %d\n", target, binarySearch(a, target) - 1);
    }
    else {
        printf ("element not in the array\n");
    }
}

int binarySearch(int *arr, int n){
    int low = 0;
    int high = 9;

    

    while (low <= high){
        int m = (low + high)/2;
        int element = *(arr + m);
        if (element == n){
            return m + 1;
        }
        else if (element > n){
            high = m - 1;
        }
        else if (element < n){
            low = m + 1;
        }
    }
    return 0;

}


int macroSearch(int *arr, int n){
    int high = 9;
    int low = 0;

    while (low <= high){
        int m = (low + high)/2;
        int element = *(arr + m);
        int op = compare (n, element);
        switch(op):
            case "-1":
                return m;
    }
}
